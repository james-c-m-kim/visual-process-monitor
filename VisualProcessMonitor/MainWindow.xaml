<Window x:Class="VisualProcessMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualProcessMonitor"
        mc:Ignorable="d"
        Title="Monitor Process" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <Button Name="btnStart" Content="Start" Click="Process_Start_Click" Width="120" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8"/>
        <Button Name="btnCapture" Content="Capture" IsEnabled="False" Click="Capture_Click" Width="120" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8"/>
    </StackPanel>
</Window>
